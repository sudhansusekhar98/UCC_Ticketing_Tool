{
  "version": 2,
  "builds": [
    {
      "src": "frontend/ucc-ticketing/package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    },
    {
      "src": "backend-express/server.js",
      "use": "@vercel/node"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "backend-express/server.js"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/ucc-ticketing/dist/$1",
      "continue": true
    }
  ],
  "routes": [
    {
      "handle": "filesystem"
    },
    {
      "src": "/(.*)",
      "destination": "/frontend/ucc-ticketing/dist/index.html"
    }
  ]
}
